root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go uses tabs by convention
[*.go]
indent_style = tab
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Markdown: keep trailing whitespace for hard line breaks
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# JS/TS
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# CSS
[*.{css,scss}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4

# Makefile requires tabs
[Makefile]
indent_style = tab
