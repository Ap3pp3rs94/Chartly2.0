{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Ap3pp3rs94/Chartly2.0/contracts/v1/reports/projection_request.schema.json",
  "title": "Chartly Reports ProjectionRequest (v1)",
  "description": "Request payload for generating a projection/forecast report. Defines model, input series, and horizon.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "request_id": {
      "type": "string",
      "minLength": 1,
      "description": "Caller-provided request identifier for idempotency and tracing."
    },
    "tenant_id": {
      "type": "string",
      "minLength": 1,
      "description": "Tenant scope identifier."
    },
    "requested_at": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 timestamp when the projection was requested."
    },
    "model": {
      "type": "object",
      "additionalProperties": false,
      "description": "Projection model selection and optional parameters.",
      "properties": {
        "name": { "type": "string", "minLength": 1, "description": "Model name." },
        "version": { "type": "string", "minLength": 1, "description": "Optional model version identifier." },
        "params": { "type": "object", "additionalProperties": true, "description": "Optional model parameters." }
      },
      "required": ["name"]
    },
    "input": {
      "type": "object",
      "additionalProperties": false,
      "description": "Input series and time range for the projection.",
      "properties": {
        "source_id": { "type": "string", "minLength": 1, "description": "Source identifier." },
        "metric_name": { "type": "string", "minLength": 1, "description": "Metric name to project." },
        "dimensions_filter": {
          "type": "object",
          "description": "Optional filter applied to metric dimensions (exact match semantics are implementation-defined).",
          "additionalProperties": true
        },
        "time_range": {
          "type": "object",
          "additionalProperties": false,
          "description": "Historical time range used to build the projection.",
          "properties": {
            "start": { "type": "string", "format": "date-time", "description": "Range start (inclusive), RFC3339." },
            "end": { "type": "string", "format": "date-time", "description": "Range end (exclusive), RFC3339." },
            "granularity": {
              "type": "string",
              "enum": ["raw", "minute", "hour", "day", "week", "month"],
              "description": "Aggregation granularity."
            }
          },
          "required": ["start", "end", "granularity"]
        }
      },
      "required": ["source_id", "metric_name", "time_range"]
    },
    "horizon": {
      "type": "object",
      "additionalProperties": false,
      "description": "Projection horizon definition.",
      "properties": {
        "steps": { "type": "integer", "minimum": 1, "description": "Number of steps to project." },
        "granularity": {
          "type": "string",
          "enum": ["minute", "hour", "day", "week", "month"],
          "description": "Projection step granularity."
        }
      },
      "required": ["steps", "granularity"]
    },
    "options": {
      "type": "object",
      "description": "Optional projection options (confidence intervals, quantiles, etc.).",
      "additionalProperties": true
    }
  },
  "required": ["tenant_id", "requested_at", "model", "input", "horizon"]
}
