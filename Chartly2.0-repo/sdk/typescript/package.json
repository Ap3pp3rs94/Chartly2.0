{
  "name": "@chartly/sdk",
  "version": "0.1.0",
  "private": true,
  "description": "Chartly 2.0 TypeScript SDK (thin HTTP helpers; contracts-first platform)",
  "author": "Chartly 2.0",
  "license": "MIT",
  "homepage": "https://github.com/Ap3pp3rs94/Chartly2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ap3pp3rs94/Chartly2.0.git",
    "directory": "sdk/typescript"
  },
  "keywords": [
    "chartly",
    "sdk",
    "typescript",
    "contracts-first",
    "telemetry"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "peerDependencies": {
    "zod": "^3.23.8"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "tsup": "^8.3.6",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8",
    "zod": "^3.23.8"
  }
}
